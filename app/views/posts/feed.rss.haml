!!! XML
%rss{ :version => "2.0", "xmlns:atom" => "http://www.w3.org/2005/Atom", "xmlns:dc" => "http://purl.org/dc/elements/1.1/" }
  %channel
    %title= MySettings.site_name
    %link= MySettings.site_url + "/posts/feed"
    %description The 10 newest posts on #{MySettings.site_name}
    %language en-us
    %pubDate= Time.now.strftime("%a, %d %b %Y %H:%M:%S %z")
    %atom:link{ :href => FORGE_CONFIG['SITE_URL'] + "/posts/feed.rss", :rel => "self", :type => "application/rss+xml"}

    - @posts.each do |post|
      %item
        %title= post.title
        %description= "<![CDATA[#{post.content.gsub('&nbsp;', '')}]]>"
        %link= post_url(post)
        %guid= post_url(post)
        %dc:creator= MySettings.site_name
        %pubDate= post.created_at.strftime("%a, %d %b %Y %H:%M:%S %z")
